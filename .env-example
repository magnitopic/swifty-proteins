# Backend
EXPO_PUBLIC_BACKEND_URL=http://localhost:9000
BACKEND_PORT=9000
NODE_ENV=development

# Frontend
REACT_NATIVE_PACKAGER_HOSTNAME=localhost
TERM=xterm-256color

# PostgreSQL Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=database_name
